/* components/search/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header {
  background-color: #fff;
  position: fixed;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  width: 750rpx;
  align-items: center;
  z-index: 99;
}

.search-container {
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50px;
  margin-left: 20rpx;
}

.search-img {
  width: 28rpx;
  height: 28rpx;
  margin-left: 20rpx;
  margin-right: 14rpx;
}

.in-bar {
  color: #999;
}

.bar {
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  display: inline-block;
  height: 68rpx;
  width: 500rpx;
  font-size: 28rpx;
}

.cancel-img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}

.cancel {
  line-height: 68rpx;
  width: 120rpx;
  text-align: center;
  display: inline-block;
  border: none;
}

.history {
  width: 690rpx;
  margin-top: 200rpx;
  margin-bottom: 20rpx;
  display: flex;
  font-size: 28rpx;
  flex-direction: column;
}

.hot-search {
  margin-top: 70rpx;
}

.title {
  line-height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.chunk {
  height: 30rpx;
  width: 10rpx;
  background-color: #000;
  display: inline-block;
  margin-right: 20rpx;
}

.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 24rpx;
  padding-left: 30rpx;
  width: 630rpx;
}

.tags v-tag {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.articles-container {
  width: 100%;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
}

.articles-container .article {
  margin: 10px;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}

.loading {
  margin: 50rpx 0 50rpx 0;
}

.empty-tip {
  display: inline-block;
  width: 100%;
  text-align: center;
  position: absolute;
  top: 50%;
}
