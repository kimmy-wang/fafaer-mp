<!--components/video/index.wxml-->
<wxs src="../../utils/filters.wxs" module="utils" />

<view class="container">
  <video bindplay="onPlay" bindpause="onPause" bindtimeupdate="onPlaying" bindended="onEnded" binderror="onError" id="video" src="{{utils.splice(video.file)}}" />
  <view class="sub-container">
    <text class="title">{{video.name}}</text>
    <text class="summary">{{video.desc}}</text>
  </view>
</view>
