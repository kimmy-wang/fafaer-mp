/* components/video/index.wxss */

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.container video {
  width: 100%;
  height: 400rpx;
}

.container .sub-container {
  width: 100%;
  height: 100rpx;
  background: white;
  display: flex;
  flex-direction: column;
  align-content: center;
  border-top-left-radius: 2px;
  border-top-right-radius: 2px;
  overflow: hidden;
  -webkit-filter: opacity(0.7);
  -moz-filter: opacity(0.7);
  -ms-filter: opacity(0.7);
  -o-filter: opacity(0.7);
  filter: opacity(0.7);
}

.container .sub-container .title {
  margin: 0 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #555;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.container .sub-container .summary {
  height: 26rpx;
  margin: 10rpx;
  font-size: 24rpx;
  line-height: 26rpx;
  /* text-indent: 50rpx; */
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
