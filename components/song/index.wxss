/* components/song/index.wxss */
.container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
}

.container .left {
  display: flex;
  flex-direction: column;
}

.left .title {
  font-size: 32rpx;
  color: #333;
}

.left .name {
  font-size: 24rpx;
  color: #777;
}

.container .right {
  padding-right: 10rpx;
}

.right image {
  width: 50rpx;
  height: 50rpx;
}