/* components/player-mini/index.wxss */
.container {
  display: inline-flex;
  flex-direction: row;
  width: 750rpx;
  height: 108rpx;
  align-items: center;
  padding: 4rpx 0;
}

.container > .img-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  margin: 0 10rpx;
}

.img-container image {
  width: 100%;
  height: 100%;
}

.container .sub-container {
  display: flex;
  flex-direction: column;
  width: 630rpx;
}

.sub-container .slider-container {
  width: 600rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
}

.slider-container slider {
  width: 520rpx;
  margin: 0;
  padding: 0;
}

.slider-container text {
  width: 80rpx;
  margin-left: 10rpx;
  color: #777
}

.wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 60rpx;
}

.wrapper .content-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.wrapper .content-container .title {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 32rpx;
  color: #333;
}

.wrapper .content-container .name {
  height: 26rpx;
  line-height: 26rpx;
  font-size: 24rpx;
  color: #999;
}

.wrapper .operate-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
}

.wrapper .operate-container > image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.wrapper .operate-container > image:last-child {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}