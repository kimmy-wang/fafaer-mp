/* components/album/index.wxss */

.container {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.container image {
  width: 200rpx;
  height: 200rpx;
  align-self: center;
}

.sub-container {
  width: 530rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  align-content: flex-start;
  margin-left: 10rpx;
}

.title {
  width: 100%;
  margin-bottom: 20rpx;
  color: #555;
  font-size: 36rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content {
  width: 100%;
  color: #777;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.tip-container {
  width: 100%;
  margin-top: 10rpx;
  color: #999;
  font-size: 26rpx;
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
}

.date {
  /* margin-right: 4rpx; */
}

.count {
  margin-right: 8rpx;
}
