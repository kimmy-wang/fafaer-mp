/* components/article/index.wxss */

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
  border-radius: 10px;
  overflow: hidden;
  position: relative;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.container image {
  width: 100%;
  height: 200px;
}

.container .sub-container {
  width: 100%;
  height: 100px;
  position: absolute;
  bottom: 0;
  background: white;
  display: flex;
  flex-direction: column;
  align-content: center;
  border-top-left-radius: 2px;
  border-top-right-radius: 2px;
  overflow: hidden;
  -webkit-filter: opacity(0.7);
	-moz-filter: opacity(0.7);
	-ms-filter: opacity(0.7);
	-o-filter: opacity(0.7);
  filter: opacity(0.7)
}

.container .sub-container .title {
  margin: 0 5px;
  font-size: 20px;
  font-weight: bold;
  color: #555;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.container .sub-container .summary {
  height: 64px;
  margin: 5px;
  font-size: 14px;
  line-height: 16px;
  text-indent: 25px;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  word-break: break-all;
  overflow: hidden;
}
