/* pages/more/more.wxss */

.container {
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
}

.container > .title {
  background-color: #f7f7f7;
  margin: 10rpx 0 4rpx 10rpx;
  color: #555;
  font-size: 28rpx;
}

/* .container > .title:first-child {
  margin-top: 0rpx;
} */

.container > .sub-sontainer {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 0 10rpx;
}

.container > .sub-sontainer:last-child {
  margin-bottom: 20rpx;
}

.sub-sontainer > .more {
  border-bottom: 1px solid #e5e5e5;
}

.sub-sontainer > .more:last-child {
  border-bottom: none;
}

.content-container, .num-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.content-container > image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.content-container > text {
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 30rpx;
  color: #555;
}

.num-container > text {
  color: #999;
  height: 40rpx;
  line-height: 40rpx;
  margin-right: 10rpx;
}

.num-container > image {
  width: 40rpx;
  height: 40rpx;
}

.feedback-btn {
  padding: 20rpx;
}

.feedback {
  width: 40rpx;
  height: 40rpx;
  color: #ff4e20;
}
