/* pages/welcome/welcome.wxss */

page, .container, swiper, image {
  width: 100%;
  height: 100%;
}

.skip {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

.skip text {
  font-size: 26rpx;
  color: #777;
  padding: 5rpx;
}

.goto {
  width: 100%;
  height: 60rpx;
  position: absolute;
  bottom: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.goto text {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  color: white;
  padding: 0 10rpx;
  border: 1px solid #777;
  border-radius: 10rpx;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}
