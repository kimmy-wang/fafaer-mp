<!--pages/new/new.wxml-->
<view wx:if="{{!searching}}" class="container">
  <view class="search-container">
    <view bindtap="onSearching" class="search-box">
      <image src="/images/icon/search.png" />
      <text>搜索文章</text>
    </view>
  </view>
  <view class="articles-container">
    <block wx:key="id" wx:for="{{dataArray}}">
      <v-article article="{{item}}" class="article" />
    </block>
  </view>
  
  <v-loading class="loading-center" wx:if="{{loading_center}}" />
  <v-loading class="loading" wx:if="{{loading}}" />
  <text wx:if="{{noneResult}}" class="empty-tip">没有搜索到文章</text>
</view>

<v-search wx:else more="{{more}}" search_url="{{search_url}}" bindinit="initSearchData" bindupdate="updateSearchData" bindclear="onClearSearch" bindcancel="onCancelSearch" >
  <view slot="datas" wx:if="{{search.searching}}" class="articles-container">
    <block wx:for="{{search.searchDataArray}}" wx:key="{{item.id}}">
      <v-article article="{{item}}" class="article" />
    </block>
  </view>
</v-search>