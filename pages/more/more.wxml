<!--pages/more/more.wxml-->
<view class="container">
  <block wx:for="{{settings}}" wx:key="*this" wx:for-item="parent">
    <view class="sub-sontainer">
      <block wx:for="{{parent}}" wx:key="{{item.id}}">
        <v-more bindclick="onItemClick" item="{{item}}" class="more">
          <view slot="content" class="content-container">
            <image src="{{item.icon}}" />
            <text>{{item.title}}</text>
          </view>
          <view slot="num" class="num-container">
            <text wx:if="{{item.type === 'MORE_ARTICLE'}}">{{articleNum}}</text>
            <text wx:if="{{item.type === 'MORE_MUSIC'}}">{{musicNum}}</text>
            <text wx:if="{{item.type === 'MORE_VIDEO'}}">{{videoNum}}</text>
            <text wx:if="{{item.type === 'MORE_PHOTO'}}">{{photoNum}}</text>
            <image wx:if="{{item.type === 'MORE_ADMIRATION'}}" src="/images/more/right.png" />
            <image wx:if="{{item.type === 'MORE_ABOUT'}}" src="/images/more/right.png" />
          </view>
        </v-more>
      </block>
    </view>
  </block>
</view>

<v-mask bindclick="onMaskClick" wx:if="{{showConfirmWindow}}" />

<v-confirm wx:if="{{showConfirmWindow}}" type="{{type}}" min="{{min}}" max="{{max}}" title="{{title}}" bindcancel="onCancel" bindconfirm="onConfirm" />