/* pages/public-welfare-detail/public-welfare-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: #f5f5f5;
}

.head {
  background-color: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.head image {
  width: 400rpx;
  height: 600rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.sub-container {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}

.headline {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}

.detail-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.vertical {
  display: flex;
  flex-direction: column;
}

.vertical .closed {
  color: red;
}

.description {
  color: #999;
  margin-right: 30rpx;
}

.content {
  font-weight: 500;
  text-indent: 64rpx;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}