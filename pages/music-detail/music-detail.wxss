/* pages/music-detail/music-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.container .search-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  position: fixed;
  z-index: 99;
  background-color: white;
  box-shadow: 0 0 3px 0 #e3e3e3;
}

.search-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background-color: #f5f5f5;
  height: 68rpx;
  width: 700rpx;
  color: #999;
}

.search-box image {
  margin-right: 10px;
  width: 14px;
  height: 14px;
  margin-bottom: -2px;
}

.songs-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  padding: 10rpx 0 0 0;
}

.margin-top {
  margin-top: 100rpx;
}

.margin-bottom {
  margin-bottom: 108rpx;
}

.album-container {
  width: 100%;
  height: 400rpx;
  position: relative;
  border-bottom: 1px solid #e3e3e3;
  overflow: hidden;
}

.album-container .img-container {
  width: 100%;
  height: 100%;
  opacity: 0.6;
  filter: blur(20px);
}

.img-container image {
  width: 100%;
  height: 100%;
}

.album-container .content-container {
  position: absolute;
  top: 50rpx;
  left: 0;
  z-index: 20;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 300rpx;
  padding-left: 40rpx;
}

.content-container image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 10px;
  overflow: hidden;
}

.content-container .container-wrapper {
  display: flex;
  flex-direction: column;
  padding-left: 60rpx;
}

.container-wrapper .company {
  /* margin-top: 30rpx; */
  font-size: 36rpx;
  font-weight: bold;
  color: #555;
}

.container-wrapper .date {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #777;
}

.container-wrapper .count {
  margin-top: 30rpx;
  color: #777;
}

.songs-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.songs-container .song {
  margin: 0 10px;
  border-bottom: 1px solid #e3e3e3;
}

.songs-container .song:first-child {
  margin-top: 10px;
}

.songs-container .song:last-child {
  border-bottom: none;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}

.loading {
  margin: 50rpx 0 50rpx 0;
}

.empty-tip {
  display: inline-block;
  width: 100%;
  text-align: center;
  position: absolute;
  top: 50%;
}

.player-container {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 123;
  background-color: #fff;
}

.player-mini-container {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 123;
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #e3e3e3;
  /* margin: 10rpx 0; */
}

.player-mini-container .player-mini {
  /* width: 100%; */
}