  <v-player class="player" wx:if="{{!fullScreen}}" />
</view> -->

<view class="player-mini-container">
  <v-player-mini cover-img="{{album.cover_img}}" song="{{currentSong}}" playing="{{playing}}" 
  duration="{{duration}}" current-time="{{currentTime}}" class="player-mini" bindclick="onPlayMiniClick" bindnext="onNextMiniClick" />
</view>