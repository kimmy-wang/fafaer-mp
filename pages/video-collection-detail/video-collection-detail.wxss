/* pages/video-collection-detail/video-collection-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.container .search-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  position: fixed;
  z-index: 99;
  background-color: white;
  box-shadow: 0 0 3px 0 #e3e3e3;
}

.search-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background-color: #f5f5f5;
  height: 68rpx;
  width: 700rpx;
  color: #999;
}

.search-box image {
  margin-right: 10px;
  width: 14px;
  height: 14px;
  margin-bottom: -2px;
}

.videos-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
}

.videos-container .video {
  margin: 10px;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}

.loading {
  margin: 50rpx 0 50rpx 0;
}

.empty-tip {
  display: inline-block;
  width: 100%;
  text-align: center;
  position: absolute;
  top: 50%;
}
